<h1 id='head'>Blog Posts</h1>

<table>
    <tr>
        <th>Title</th>
        <th>Content</th>
        <th colspan="3"></th>
    </tr>
    <% @posts.each do |post| %>
        <tr>             
            <td><%= post.title[0..50] %></td>
            <td><%= post.content[0..100].html_safe %></td>
            <td><%= link_to 'Show', post_path(post) %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post_path(post),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <%end%>
</table>

<%=link_to 'New', new_post_path %>
